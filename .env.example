# Urban Intelligence Web UI Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Google Maps API Key (Required for maps functionality)
# Get this from Google Cloud Console - see GOOGLE_MAPS_SETUP.md for details
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Default location (Bengaluru coordinates)
NEXT_PUBLIC_DEFAULT_LAT=12.9120
NEXT_PUBLIC_DEFAULT_LNG=77.6365

# Backend API URL (adjust for your backend deployment)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Optional: Analytics and tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Optional: Feature flags
NEXT_PUBLIC_ENABLE_LOCATION_TRACKING=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Development settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false
